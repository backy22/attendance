<% provide(:title, "login") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :email, "email", class: "label-login" %>
      <%= f.email_field :email, class: 'form-control' %>
      <h4>Email of Admin user: sample@email.com</h4>
      <h4>Email of a test user: aya@email.com</h4>

      <%= f.label :password, "password", class: "label-login" %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <h4>Password of Admin user: password</h4>
      <h4>Password of a test user: password</h4>

      <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
        <%= f.check_box :remember_me, id: "remember-me" %>
        <span>Remember me</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
    <p>
      Sign up <%= link_to "here", signup_path %>
    </p>
  </div>
</div>
